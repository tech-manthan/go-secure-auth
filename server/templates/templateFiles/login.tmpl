<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/components/core-min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/components/sha256-min.js"></script>

  <style>
    html, body {
      height: 100%;
      width: 100%;
      margin: 0;
      padding: 0;
    }
    #login {
      text-align: center;
      width: 75%;
      max-width: 600px;
      margin: 0 auto;
    }
    .fullWidth {
      width: 100%;
    }
    input {
      margin-top: 5px;
    }
    h1 {
      margin-top: 25px;
    }
  </style>
</head>
<body>
  <div id="login">
    <h1>Login</h1>
    <form id="fakeLogin" name="fakeLogin">
      <input class="fullWidth" name="username" type="text" placeholder="username" />
      <input class="fullWidth" name="password" type="password" placeholder="password" />
      <input type="submit" value="Login" />
    </form>

    <form style="display: none;" id="realLogin" name="realLogin" action="/login" method="POST">
      <input class="fullWidth" name="username" type="text" placeholder="username" />
      <input class="fullWidth" name="password" type="password" placeholder="password" />
    </form>

    <form id="restricted" name="restricted" action="/restricted" method="POST" style="display: none;">
      <input id="X-CSRF-Token-input" name="X-CSRF-Token" />
    </form>
  </div>

  <script>
    // Example: Replace these template values if needed from server-side rendering
    const BAlertUser = false;
    const AlertMsg = "Login failed";

    if (BAlertUser) alert(AlertMsg);

    document.getElementById("fakeLogin").addEventListener("submit", function (event) {
      event.preventDefault();

      const fakeForm = document.forms["fakeLogin"];
      const realForm = document.forms["realLogin"];
      const restrictedForm = document.forms["restricted"];

      const username = fakeForm.username.value;
      const password = fakeForm.password.value;

      const hashedPassword = CryptoJS.SHA256(password).toString(CryptoJS.enc.Hex);

      realForm.username.value = username;
      realForm.password.value = hashedPassword;

      // Prepare data to send (like jQuery's .serializeArray)
      const formData = new FormData(realForm);
      const searchParams = new URLSearchParams(formData);

      fetch("/login", {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded"
        },
        body: searchParams.toString()
      })
      .then(response => {
        const token = response.headers.get("X-CSRF-Token");
        if (token) {
          console.log("Success! The token is: ", token);
          document.getElementById("X-CSRF-Token-input").value = token;
          restrictedForm.submit();
        } else {
          throw new Error("CSRF token missing in response");
        }
      })
      .catch(error => {
        console.error("Login error:", error);
      });
    });
  </script>
</body>
</html>
